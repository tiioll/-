<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".UserDescriptionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/frameLayout"
        android:layout_width="418dp"
        android:layout_height="658dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">


        <TextView
            android:id="@+id/changephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60sp"
            android:layout_marginRight="5dp"
            android:text="Изменить фото" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name_vvod"
            android:layout_width="381dp"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_rounding"
            android:ems="10"
            android:inputType="text"
            android:text="1" />

        <TextView
            android:id="@+id/surname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="Фамилия"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/surname_vvod"
            android:layout_width="381dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_rounding"
            android:ems="10"
            android:inputType="text"
            android:text="1" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email_vvod"
            android:layout_width="381dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_rounding"
            android:ems="10"
            android:inputType="text"
            android:text="1" />



        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="Возраст"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/age_vvod"
            android:layout_width="381dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_rounding"
            android:ems="10"
            android:inputType="text"
            android:text="1" />

        <Button
            android:id="@+id/save_button"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Сохранить" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>