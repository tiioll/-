    <fragment
        android:id="@+id/navigation_training"
        android:name="com.example.app_android_2_version.ui.trainings.TrainingFragment"
        android:label="@string/title_trainings"
        tools:layout="@layout/fragment_training" />


    <fragment
        android:id="@+id/navigation_habitat"
