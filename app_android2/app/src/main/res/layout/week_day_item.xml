<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_week_day_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:visibility="visible"
        app:cardBackgroundColor="@color/light_gray"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linnear_layout_week_day_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="7dp"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/light_gray"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/light_gray"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/week_day_done_bg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/habitats_week_day"
                        android:elevation="0dp"
                        android:fontFamily="@font/jost"
                        android:paddingTop="3dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="?android:attr/panelBackground"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_mains"
                        android:elevation="0dp"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/week_day_done"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icons_checkmark"
                            android:backgroundTint="@color/white"
                            android:visibility="invisible" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="?android:attr/panelBackground"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_mains"
                        android:elevation="0dp"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/week_day_active"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/light_gray_rounding"
                            android:backgroundTint="@color/white"
                            android:visibility="invisible" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/week_day_list_item_week_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost"
                android:text="Пн"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:visibility="visible" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>