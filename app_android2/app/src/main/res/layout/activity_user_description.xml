<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".UserDescriptionActivity">

    <LinearLayout
        android:id="@+id/userInformation"
        android:layout_width="418dp"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">


        <TextView
            android:id="@+id/changephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60sp"
            android:text="Изменить фото" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/name_vvod"
            android:layout_width="369dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/defaultcommonrounder"
            android:ems="10"
            android:hint="Введите имя..."
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/surname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="Фамилия"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/surname_vvod"
            android:layout_width="369dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/defaultcommonrounder"
            android:ems="10"
            android:hint="Введите фамилию..."
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/email_vvod"
            android:layout_width="369dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/defaultcommonrounder"
            android:ems="10"
            android:hint="Введите почту..."
            android:inputType="text"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:fontFamily="@font/inter_bold"
                android:text="Вес"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107dp"
                android:fontFamily="@font/inter_bold"
                android:text="Рост"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:fontFamily="@font/inter_bold"
                android:text="Возраст"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/weight_vvod"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/light_gray_rounding"
                android:ems="10"
                android:gravity="center"

                android:hint=""
                android:inputType="text"
                android:text=""
                android:textSize="12sp" />

            <EditText
                android:id="@+id/height_vvod"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/light_gray_rounding"
                android:ems="10"
                android:gravity="center"
                android:hint=""
                android:inputType="text"
                android:text=""
                android:textSize="12sp" />


            <EditText
                android:id="@+id/age_vvod"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/light_gray_rounding"
                android:ems="10"
                android:gravity="center"
                android:hint=""
                android:inputType="text"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="Пол"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="233dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/baseline_radio_button_unchecked_24"
                    android:text="Муж" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:text="Жен" />
            </RadioGroup>


        </LinearLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Выйти из аккаунта"
            android:textSize="15sp" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="98dp"
        android:outlineAmbientShadowColor="@color/black"
        android:src="@color/dark_gray"
        android:layout_height="97dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="28dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp" />


</androidx.constraintlayout.widget.ConstraintLayout>