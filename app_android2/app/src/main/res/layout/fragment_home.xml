<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home_container"
    android:background="@color/purple_200"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/userInformation"
        android:layout_width="418dp"
        android:layout_height="858dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="130dp"
            android:layout_height="112dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/profile_items"
            android:backgroundTint="@color/purple_200"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="330dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text="Вес"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2"
            android:layout_width="130dp"
            android:layout_height="112dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="145dp"
            android:backgroundTint="@color/purple_200"
            android:background="@drawable/profile_items"
            android:orientation="vertical"
            android:layout_marginBottom="60dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="330dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text="Рост"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear3"
            android:layout_width="130dp"
            android:layout_marginBottom="60dp"
            android:layout_height="112dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="280dp"
            android:backgroundTint="@color/purple_200"
            android:background="@drawable/profile_items"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="330dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text="Возраст"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="119dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/profile_items"
            android:orientation="vertical" />

        <TextView

            android:id="@+id/surname_1"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jost_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/namee_1"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/jost_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/changeprofile"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/light_gray"
            android:fontFamily="@font/jost_bold"
            android:gravity="center"
            android:text="Изменить"
            android:textAllCaps="false"

            android:textColor="@color/purple_200"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/light_gray_rounding"
            android:orientation="vertical">

            <Button
                android:id="@+id/open_notifications"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/baseline_notifications_none_24" />
        </LinearLayout>

    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/homePicture"
        android:layout_width="90dp"
        android:layout_height="88dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:src="@drawable/baseline_person_24"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>